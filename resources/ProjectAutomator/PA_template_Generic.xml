<?xml version="1.0" encoding="UTF-8" ?>
<DeployerSpec exitOnError="true" sourceType="Repository">
	<DeployerServer>
		<host>${deployer.host}:${deployer.port}</host>
		<user>${deployer.username}</user>
		<pwd>${deployer.password}</pwd>
	</DeployerServer>
	<Environment>
		<!-- 
		<IS>
			<isalias name="${deployer.target.is.alias1}">
				<host>${deployer.target.is.host1}</host>
				<port>${deployer.target.is.port1}</port>
				<user>${deployer.target.is.user1}</user>
				<pwd>${deployer.target.is.password1}</pwd>
				<useSSL>false</useSSL>
				<version>${deployer.target.is.version}</version>
				<installDeployerResource>true</installDeployerResource>
				<Test>false</Test>
			</isalias>
		</IS>
		-->
		
		<TargetGroup name="ISTargetGroup_${targetEnv}" type="IS" description="is target group"
			isLogicalCluster="false">
			<!-- <alias type="IS">${deployer.target.is.alias1}</alias> -->
		</TargetGroup>
		<Repository>
			<repalias name="RepoSource">
				<type>FlatFile</type>
				<urlOrDirectory>${deployer.fbr.location}</urlOrDirectory>
				<Test>true</Test>
			</repalias>
		</Repository>
	</Environment>

	<Projects>
		<Project description="" ignoreMissingDependencies="true"
			name="${bda.deployer.bda.projectName}" overwrite="true" type="Repository">

			<DeploymentSet autoResolve="ignore" description=""
				name="myDeploymentSet" srcAlias="RepoSource">
				<!-- Add all packages here -->
				<!-- Example for an IntegrationServer package: <Composite srcAlias="RepoSource" 
					type="IS" displayName="Package/ZfinDebiWsAccess" name="ZfinDebiWsAccess" 
					/> -->
			</DeploymentSet>

			<DeploymentMap description="" name="myDeploymentMap" />
			<MapSetMapping mapName="myDeploymentMap" setName="myDeploymentSet">
				<group type="IS">ISTargetGroup_${targetEnv}</group>
<!-- 				<group type="ProcessModel">BPMTargetGroup_${targetEnv}</group>
				<alias type="MWS">${deployer.target.mws.alias}</alias> -->
				<!-- <group type="RULES">RuleTargetGroup_${targetEnv}</group> -->
			</MapSetMapping>
			<DeploymentCandidate description=""
				mapName="myDeploymentMap" name="myDeployment" />
		</Project>
	</Projects>
</DeployerSpec>
